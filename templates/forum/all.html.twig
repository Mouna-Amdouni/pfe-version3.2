    <h2>Liste de vos anciennes conversations</h2>
<div class="container">
<div class="messaging">
      
   
    

    {% for t in topics|filter(topics => not topics.deleted) | sort|reverse %}

    {% if ( t.author is same  as app.user ) %}

    <div class="chat_list active_chat">
            <div class="chat_people">
                <div class="chat_img"> <img class="msg-img" src=" {{ asset('uploads/images/'  ~ t.idConsultant.logo) }}" alt="Awesome Image"></div>
                <div class="chat_ib">
                  <h5> {{ t.idConsultant.nomComplet }} <span class="chat_date">{{t.creationDate|date("d/m/Y") }}</span></h5>
                  <p><a href="{{ path('topic', {'id': t.id}) }}">{{ t.name }}</a> </p>
                </div>
            </div>
    </div>
          


        
{% endif %}



